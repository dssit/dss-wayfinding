<div class="loader" ng-hide="loaded"></div>
<search
    ng-show="loaded"
    search-type="Rooms"
    search-type-singular="Room"
    search-items="rooms"
    current-item="room"
    no-new-item="true"
    item-changer="changeRoom">
</search>
<div class="col-sm-9" ng-show="room">
    <form method="post" class="form-horizontal directory-form" id="Room-form">
<%# hidden_field_tag 'id' %>
<%# hidden_field_tag 'type', type %>
<%# hidden_field_tag request_forgery_protection_token.to_s, form_authenticity_token %>

        <div class="form-group">
          <label for="name" class="col-sm-2 control-label">Room Name</label>
          <div class="col-sm-10">
            <input type="text" id="name" name="name" ng-model="room.name" class="form-control"/>
          </div>
        </div>

        <div class="form-group">
          <div class="col-sm-offset-2 col-sm-10">
            <button id="submit" class="btn btn-default" type="submit" ng-click="update(room)">Update</button>
            <a href="{{qrLink}}" target="_blank" class="btn btn-default">Generate origin QR</a>
          </div>
        </div>
    </form>
</div>
